gem 'puma'           # Web server
gem 'rack'           # Web server interface
gem 'nokogiri'
gem 'httparty'
gem 'sidekiq'        # Background job processing
gem 'connection_pool' # Connection pooling for Sidekiq

# Admin Panel
gem 'sinatra-activerecord'
gem 'sinatra-contrib'
gem 'padrino-helpers'
gem 'will_paginate'
gem 'rack-cors'

